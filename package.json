{
  "name": "tinyscale",
  "version": "1.0.0",
  "description": "Production-quality URL shortener API",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts | pino-pretty",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --exclude '**/*.integration.test.ts'",
    "test:integration": "vitest run tests/",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [],
  "license": "MIT",
  "dependencies": {
    "@fastify/jwt": "^10.0.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/sensible": "^6.0.4",
    "@fastify/type-provider-typebox": "^6.1.0",
    "@sinclair/typebox": "^0.34.48",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.4",
    "drizzle-orm": "^0.45.1",
    "fastify": "^5.7.4",
    "fastify-plugin": "^5.1.0",
    "nanoid": "^5.1.6",
    "pg": "^8.18.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^25.2.3",
    "@types/pg": "^8.16.0",
    "@vitest/coverage-v8": "^4.0.18",
    "drizzle-kit": "^0.31.9",
    "pino-pretty": "^13.1.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
